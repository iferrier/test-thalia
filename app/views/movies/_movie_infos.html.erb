<div class="movie-card" data-controller="edit-movies" data-edit-movies-target="card">
  <%= image_tag movie.image_url %>

  <div class="movie-infos" data-edit-movies-target="infos">
    <h2><%= movie.title %><small> (<%= movie.year %>)</small></h2>
    <button aria-label="Edit movie" data-action="click->edit-movies#displayForm">
      <i class="fa-solid fa-pen fa-xs ml-2"></i>
    </button>
  </div>

  <%= simple_form_for movie, html: {
      class: "d-none",
      data: { edit_movies_target: "form", action: "submit->edit-movies#update"}
    } do |f| %>
    <%= f.input :title %>
    <%= f.input :year %>
    <%= f.input :rating, collection: 1..5, label: false, prompt_html: {class: 'fa-solid fa-person'} %>
    <%= f.submit "Update movie", class: "btn btn-sm btn-primary btn-block mt-2" %>
  <% end %>
</div>
